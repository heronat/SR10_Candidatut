<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../header'); %>
                <%- include('nav', {active: "recruiter_demand"}); %>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row vw-100">
                <div class="col-2 py-2 bg-light bg-gradient">
                    <aside>
                        <%- include('../tri', {options: {
                            'nom': 'Nom',
                          }, optionsearch: {
                            'nom': 'Nom',
                          } }); %>
                    </aside>
                </div>
                <div class="col-10">
                    <% requests.forEach((request) => { %>
                        <div class="row border py-2 justify-content-center">
                            <div class="d-flex justify-content-center">
                                <h3 class="m-2">Demande par <%= request.mail %></h3>
                                <form action="recruiter_demand/accept/<%= request.mail %>" method="post"><button class="btn btn-success m-2">Accepter</button></form>
                                <form action="recruiter_demand/refuse/<%= request.mail %>" method="post"><button class="btn btn-danger m-2">Refuser</button></form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <footer class="text-center text-lg-start bg-light text-muted">
            <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom border-top">
                <a href="/candidate/offers" role="button" class="btn btn-success">Espace Candidat</a>
            </section>
        </footer>
    </body>
</html>