<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../../header'); %>
                <%- include('../nav', {active: "orgas"}); %>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row vw-100">
                <div class="col-2 py-2 bg-light bg-gradient">
                    <aside>
                        <%- include('../../tri', {options: {
                            'nom': 'Nom',
                            'date_creation': "Date de création",
                            'etat': "Etat de l'organisation",
                            'type': "Type d'organisation",
                          }, optionsearch: {
                            'nom': 'Nom',
                            'date_creation': "Date de création",
                            'etat': "Etat de l'organisation",
                          } }); %>
                    </aside>
                </div>
                <div class="col-10">
                    <%- include("../../list_display", {
                        list: orgas,
                        title: (orga) => `Organisation ${orga.nom} (${orga.type}, ${orga.etat})`,
                        buttons: (orga) => [{href: `/admin/orga_detail/${orga.id}`, name: "Voir les détails"}],
                        info: (orga) => [orga.adresse, "Créée le " + orga.date_creation]
                    }); %>
                </div>
            </div>
        </div>
        <footer class="text-center text-lg-start bg-light text-muted">
            <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom border-top">
                <a href="/candidate/offers" role="button" class="btn btn-success">Espace Candidat</a>
            </section>
        </footer>
    </body>
</html>