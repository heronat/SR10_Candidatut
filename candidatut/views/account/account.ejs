<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../header'); %>
                <nav>
                    <div class="row py-2 bg-light border-top border-bottom">
                        <div class="col px-5">
                            <div class="container btn-group" role="group">
                                <a role="button" class="btn btn-primary" aria-disabled="true">Compte</a>
                            </div>
                        </div>
                        <div class="col px-5">
                            <div class="d-flex justify-content-center">
                                <a href="/disconnect" role="button" class="btn btn-danger">Déconnexion</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row vw-100">
                <div class="d-flex flex-column bd-highlight mb-3">
                    <div class="p-2 bd-highlight">Nom: <%= lastName %></div>
                    <div class="p-2 bd-highlight">Prenom: <%= firstName %></div>
                    <div class="p-2 bd-highlight">Mail: <%= mail %></div>
                    <div class="p-2 bd-highlight">Téléphone: <%= phone %></div>
                    <div class="p-2 bd-highlight">Date de création: <%= creationDate %></div>
                </div>
            </div>
            <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom border-top">
                <a href="account/edit" role="button" class="btn btn-success">Modifier Compte</a>
                <a href="account/delete" role="button" class="btn btn-danger">Supprimer Compte</a>
                <a href="candidate" role="button" class="btn btn-danger">Retour</a>
            </section>
        </div>
    </body>
</html>