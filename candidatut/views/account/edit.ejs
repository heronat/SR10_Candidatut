<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../header'); %>
                <nav>
                    <div class="row py-2 bg-light border-top border-bottom">
                        <div class="col px-5">
                            <div class="container btn-group" role="group">
                                <a role="button" class="btn btn-primary" aria-disabled="true">Compte</a>
                            </div>
                        </div>
                        <div class="col px-5">
                            <div class="d-flex justify-content-center">
                                <a href="/disconnect" role="button" class="btn btn-danger">Déconnexion</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <section class="container-md">
            <form action="/account/edit" method="post">
                <div class="mb-3">
                    <label for="inputName" class="form-label">Nom</label>
                    <input name="lastName" type="text" class="form-control" id="inputName" aria-describedby="NameHelp" value="<%= lastName %>" required>
                </div>
                <div class="mb-3">
                    <label for="inputFirstName" class="form-label">Prénom</label>
                    <input name="firstName" type="text" class="form-control" id="inputFirstName" aria-describedby="FirstNameHelp" value="<%= firstName %>" required>
                </div>
                <div class="mb-3">
                    <label for="inputPhone" class="form-label">Téléphone</label>
                    <input name="phone" type="text" class="form-control" id="inputPhone" aria-describedby="PhoneHelp" value="<%= phone %>" required>
                </div>
                <div class="mb-3">
                    <label for="inputAddress" class="form-label">Entrez une nouvelle adresse</label>
                    <input name="address" type="text" class="form-control" id="inputAddress" aria-describedby="AddressHelp" required>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Entrer un nouveau mot de passe</label>
                    <input name="password" type="password" class="form-control" id="inputPassword" required>
                    <div id="passwordRules" class="form-text">Minimum 12 caractères, avec au moins une majuscule, une minuscule, un chiffre, et un caractère spécial.</div>
                </div>
                <button type="submit" class="btn btn-primary">Editer</button>
            </form>
        </section>
        <footer></footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom border-top">
            <a href="javascript:history.go(-1)" role="button" class="btn btn-danger">Retour</a>
        </section>
    </body>
</html>