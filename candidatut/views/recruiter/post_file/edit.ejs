<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../../header'); %>
                <nav>
                    <div class="row py-2 bg-light border-top border-bottom">
                        <div class="col px-5">
                            <div class="d-flex justify-content-end">
                                <a href="/recruiter/post_file_detail/<%= ficheDePoste.id %>" role="button" class="btn btn-danger">Retour</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <section class="container-md p-4">
            <form class="justify-content-center" action="/recruiter/edit_post_file/<%= ficheDePoste.id %>" method="post">
                <div class="mb-3">
                    <label for="inputName" class="form-label">Intitulé</label>
                    <input required name="name" type="text" value="<%= ficheDePoste.nom %>" class="form-control" id="inputName" aria-describedby="nameHelp">
                </div>
                <div class="mb-3">
                    <label for="inputStatus" class="form-label">Statut</label>
                    <input required name="status" type="text" value="<%= ficheDePoste.statut %>" class="form-control" id="inputStatus" aria-describedby="statusHelp">
                </div>
                <div class="mb-3">
                    <label for="inputResponsable" class="form-label">Responsable hiérarchique</label>
                    <input required name="responsable" type="text" value="<%= ficheDePoste.responsable %>" class="form-control" id="inputResponsable" aria-describedby="responsableHelp">
                </div>
                <div class="mb-3">
                    <label for="inputType" class="form-label">Type de métier</label>
                    <input required name="type" type="text" value="<%= ficheDePoste.type_metier %>" class="form-control" id="inputType" aria-describedby="typeHelp">
                </div>
                <div class="mb-3">
                    <label for="inputPlace" class="form-label">Lieu de la mission</label>
                    <input required name="place" type="text" value="<%= ficheDePoste.lieu %>" class="form-control" id="inputPlace" aria-describedby="placeHelp">
                </div>
                <div class="mb-3">
                    <label for="inputRythm" class="form-label">Rythme (h/semaine)</label>
                    <input required name="rythm" type="number" value="<%= ficheDePoste.heures_semaine %>" min="1" max="100" class="form-control" id="inputRythm" aria-describedby="rythmHelp">
                </div>
                <div class="mb-3">
                    <label for="inputMinPay" class="form-label">Salaire minimum (€/mois)</label>
                    <input required name="minPay" type="number" value="<%= ficheDePoste.salaire_min %>" min="0" max="1000000" class="form-control" id="inputMinPay" aria-describedby="minPayHelp">
                </div>
                <div class="mb-3">
                    <label for="inputMaxPay" class="form-label">Salaire maximum (€/mois)</label>
                    <input required name="maxPay" type="number" value="<%= ficheDePoste.salaire_max %>" min="0" max="1000000" class="form-control" id="inputMaxPay" aria-describedby="minPayHelp">
                </div>
                <div class="mb-3">
                    <label for="inputWorkFromHome" class="form-label">Télétravail possible?</label>
                    <input required name="workFromHome" type="checkbox" <% if (ficheDePoste.teletravail) { %> checked <% } %> id="inputWorkFromHome" aria-describedby="workFromHomeHelp">
                </div>
                <div class="mb-3">
                    <label for="inputDescription" class="form-label">Description</label>
                    <textarea required name="description" id="inputDescription" class="form-control" aria-describedby="descriptionHelp" rows="5" cols="80"><%= ficheDePoste.description %></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Editer la fiche de poste</button>
            </form>
        </section>
        <footer class="text-center text-lg-start bg-light text-muted">
            <section class="d-flex justify-content-center justify-content-lg-around p-4 border-bottom border-top">
                <a role="button" href="/recruiter/post_files/" class="btn btn-danger">Retour aux fiches de poste</a>
            </section>
        </footer>
    </body>
</html>