<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../header'); %>
                <%- include('nav', {active: "orga_request"}); %>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row vw-100">
                <div class="col-2 py-2 bg-light bg-gradient">
                    <aside>
                        <%- include('../tri', {options: {
                            'nom': 'Nom',
                            'date_creation': "Date de création",
                            'organisation': "Nom de l'organisation",
                          }, optionsearch: {
                            'nom': 'Nom',
                            'date_creation': "Date de création",
                            'organisation': "Nom de l'organisation",
                          } }); %>
                    </aside>
                </div>
                <% if (typeof requests !== "undefined") { %>
                    <div class="col-10">
                        <% requests.forEach((request) => { %>
                            <div class="row border py-2 justify-content-center">
                                <div class="d-flex justify-content-center">
                                    <h3 class="m-2">Demande par <%= request.mail %></h3>
                                    <form action="orga_request/accept/<%= request.mail %>" method="post"><button class="btn btn-success m-2">Accepter</button></form>
                                    <form action="orga_request/refuse/<%= request.mail %>" method="post"><button class="btn btn-danger m-2">Refuser</button></form>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="col-10 text-center p-5">
                        <h2>Vous n'êtes pas dans une organisation</h2>
                    </div>
                <% } %>
            </div>
        </div>
        <footer class="text-center text-lg-start bg-light text-muted">
            <%- include("footer") %>
        </footer>
    </body>
</html>