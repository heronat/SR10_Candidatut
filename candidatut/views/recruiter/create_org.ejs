<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                <%- include('../header'); %>
                <%- include('nav', {active: "create_org"}); %>
            </div>
        </header>
        <section class="container-md p-4">
            <form action="/recruiter/create_org" method="post">
                <div class="mb-3">
                    <label for="inputName" class="form-label">Nom</label>
                    <input required name="name" type="text" maxlength="50" class="form-control" id="inputName" aria-describedby="nameHelp">
                </div>
                <div class="mb-3">
                    <label for="inputDate" class="form-label">Date de création</label>
                    <input required name="date" type="date" class="form-control" id="inputDate" aria-describedby="dateHelp">
                </div>
                <div class="mb-3">
                    <label for="inputType" class="form-label">Type d'organisation</label>
                    <input required name="type" type="text" maxlength="50" class="form-control" id="inputType" aria-describedby="typeHelp">
                </div>
                <div class="mb-3">
                    <label for="inputAdress" class="form-label">Adresse</label>
                    <input required name="adress" type="text" maxlength="100" class="form-control" id="inputAdress" aria-describedby="adressHelp">
                </div>

                <button type="submit" class="btn btn-primary">Demander la création</button>
            </form>
        </section>
        <footer class="text-center text-lg-start bg-light text-muted">
            <%- include("footer") %>
        </footer>
    </body>
</html>